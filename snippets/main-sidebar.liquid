

<div style="min-height:72px;" class="hidden-xs">
<div data-spy="affix" data-offset-top="349" class="container" style="padding-left:0;padding-right:30px;">
<nav class="navbar navbar-default">
{% comment %} <div class="nav-sidebar" data-spy="affix" data-offset-top="350" data-offset-bottom="350"> {% endcomment %}
<ul class="nav navbar-nav">
  {% for i in (1..10) %}
    {% capture attr %}aside_block_{{i}}{% endcapture %}
    {% if settings[attr] %}
      {% assign linklistname = settings[attr] %}
      {% assign linklist = linklists[linklistname] %}
      {% unless linklist.title == blank %}
        {% comment %} <h4>{{ linklist.title }}</h4> {% endcomment %}
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
            {{ linklist.title }}
            <span class="caret"></span>
          </a>
          {% comment %} <ul class="list-unstyled"> {% endcomment %}
          <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
              {% for link in linklist.links %}
                  <li {% if link.active %}class="active"{% endif %}>
                      <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
              {% endfor %}
          </ul>
        </li>
      {% endunless %}
    {% endif %}
  {% endfor %}
</ul>
{% if collection %}
        <form class="navbar-form pull-right">
          <select id="filter" class="form-control">
            <option value="">All Formats</option>
            {% for tag in collection.all_tags %}
              {% if collection.all_types contains tag %}
                {% if current_tags contains tag %}
                  <option value="{{ tag | handle }}" selected>{{ tag }}</option>
                {% else %}
                  <option value="{{ tag | handle }}">{{ tag }}</option>
                {% endif %}
              {% endif %}
            {% endfor %}
          </select>
        </form>

        <script>
          $("#filter").on("change", function(){
            location.href = "/collections/{{collection.handle}}/" + $(this).val();
          });
        </script>
      {% endif %}
{% comment %} </div> {% endcomment %}
</nav>
</div>
</div>
