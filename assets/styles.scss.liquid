
@import url(http://fonts.googleapis.com/css?family=Arimo);
@import url(http://fonts.googleapis.com/css?family=Droid+Sans);
@import url(http://fonts.googleapis.com/css?family=Hind);
@import url(http://fonts.googleapis.com/css?family=Inconsolata);
@import url(http://fonts.googleapis.com/css?family=PT+Sans);


{% if settings.body_main_google_font == 'None' %}
  {% assign bodyfont = settings.body_main_font %}
  {% assign headersfont = settings.headers_main_font %}
{% else %}
  {% assign bodyfont = settings.body_main_google_font %}
  {% assign headersfont = settings.headers_main_google_font %}
{% endif %}



body {
  font-family: {{ bodyfont }}, sans-serif;
}

h1,h2,h3,h4,h5,h6 {
  font-family: {{ headersfont }}, sans-serif;
}

a {
  color: #111;
  &:hover {
    color: #111;
  }
}

.nav-bar {
  background: url("{{ 'vinyl.png' | asset_url }}") 50% -587px  no-repeat #040707;
  margin-bottom: 15px;
  padding-top: 20px;
  padding-bottom: 30px;
}

.site-header__logo {
  margin: 30px 0 20px;
}

.nav-pills {
  margin: 45px 0 20px;
  > li {
    float: none;
    display: inline-block;
    font-family: {{ headersfont }}, sans-serif;
    text-transform: uppercase;
    > a {
      font-weight: bold;
      font-size: .9em;
      &:visited {
        background: none;
        color: #FFF;
      }
      &:focus,
      &:active,
      &:hover {
        background: #FFF;
        color: #111;
      }
    }
    &.active {
      > a {
        color: #FFF;
        background: #222;
        &:hover {
          background: #FFF;
          color: #111;
        }
      }
    }
  }
}

.nav-sidebar {
  padding-top: 15px;
  h4 {
    font-size: .8em;
    margin: 10px 0 4px; 
    text-transform: uppercase;
    background: #111;
    color: #FFF;
    display: inline-block;
    border-radius: 2px;
    padding: 0 2px;
  }
  a {
    display: block;
    font-size: .9em;
  }
  &.affix {
    position: fixed !important;
    top: 20px;
  }
  &.affix-bottom {
    position: absolute;
  }
  li.active {
    a {
      font-size: .9em;
      font-weight: bold;
    }
  }
}

#products-grid {
  padding-top: 20px;
}

.loader {
  display: block;
  text-align: center;
  color: #DDD;
  margin-top: 50px;
  font-size: .9em;
  font-weight: bold;
  text-transform: uppercase;
}

#products-grid {
  min-height: 1000px;
}

.product-grid-item {
  width: 20%;
  float: left;
  padding-left: 15px;
  //@media(max-width: @screen-xs-max){
  //  width: 50%; 
  //}
  //@media(max-width: @screen-sm-max){
  //  width: 25%; 
  //}
  opacity: 1;
  -webkit-transform: scale(1.0);
  -webkit-transform-origin: 50% 50%;
  -moz-transform: scale(1.0);
  -moz-transform-origin: 50% 50%;
  -o-transform: scale(1.0);
  -o-transform-origin: 50% 50%;
  -ms-transform: scale(1.0);
  -ms-transform-origin: 50% 50%;
  transform: scale(1.0);
  transform-origin: 50% 50%;
  transition: transform .25s ease-in-out;
  -moz-transition: transform .25s ease-in-out;
  -webkit-transition: transform .25s ease-in-out;
  .thumbnail {
    cursor: pointer;
    border-color: #EEE;
    min-height: 285px;
    position: relative;
  }
  .release-title {
    text-transform: capitalize;
    max-height: 33px;
    overflow: hidden;
    display: block;
  }
  .caption {
    display: block;
    padding: 10px;
    font-size: .9em;
    line-height: 1.3;
    &:hover {
      text-decoration: none;
    }
  }
  .price {
    position: absolute;
    bottom: 10px;
    left: 10px;
  }
  &.invisible {
    opacity: 0;
    -webkit-transform: scale(0.0);
    -moz-transform: scale(0.0);
    -o-transform: scale(0.0);
    -ms-transform: scale(0.0);
    transform: scale(0.0);
  }
}

.tags {
  text-align: center;
  a {
    margin-bottom: 10px;
  }
}

.site-footer {
  h5 {
    font-size: .8em;
    font-weight: bold;
  }
  h4 {
    font-size: 1em;
    font-weight: bold;
    text-transform: uppercase;
  }
  a {
    display: block;
    font-size: .9em;
  }
  li.active {
    a {
      font-size: .9em;
      font-weight: bold;
    }
  }
}

.template-page {
  h1, h2, h3, h4, h5, h6 {
    text-transform: uppercase;
  }
}

