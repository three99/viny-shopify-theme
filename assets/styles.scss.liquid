
@import url(//fonts.googleapis.com/css?family=Arimo);
@import url(//fonts.googleapis.com/css?family=Droid+Sans);
@import url(//fonts.googleapis.com/css?family=Hind);
@import url(//fonts.googleapis.com/css?family=Inconsolata);
@import url(//fonts.googleapis.com/css?family=PT+Sans);


{% if settings.body_main_google_font == 'None' %}
  {% assign bodyfont = settings.body_main_font %}
  {% assign headfont = settings.headers_main_font %}
{% else %}
  {% assign bodyfont = settings.body_main_google_font %}
  {% assign headfont = settings.headers_main_google_font %}
{% endif %}

$bodyfont: {{ bodyfont }}, sans-serif;
$headfont: {{ headfont }}, sans-serif;

body {
  font-family: $bodyfont;
}

h1,h2,h3,h4,h5,h6 {
  font-family: $headfont;
}

.nav-bar {
  background-image: url("{{ 'vinyl.svg' | asset_url }}");
  background-size: 650px;
  background-color: #000;
  background-position: 50% -238px;
  background-repeat: no-repeat;
}

.nav-pills {
  > li {
    font-family: $headfont;
  }
}

.navbar {
  li > a {
    font-size: .9em;
    font-family: $headfont;
  }
}
