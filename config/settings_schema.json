  {
    "name": "Product Pages",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_product_img_zoom",
        "label": "Enable product Image zoom",
        "default": true
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "checkbox",
        "id": "ajax_cart_enable",
        "label": "Enable Ajaxify Cart",
        "info": "[View Documentation](http:\/\/shopify.com\/timber#ajax-cart)",
        "default": false
      }
    ]
  },
  {
    "name": "Footer",
    "settings": [
