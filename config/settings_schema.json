[
  {
    "name": "Navigation Bar",
    "settings": [
      {
        "type": "header",
        "content": "Logo"
      },
      {
        "type": "checkbox",
        "id": "logo_use_image",
        "label": "Use Custom Logo",
        "default": false
      },
      {
        "type": "image",
        "id": "logo.png",
        "label": "Shop logo"
      }
