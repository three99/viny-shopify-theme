<!-- /templates/customers/reset_password.liquid -->
{% layout settings.customer_layout %}

<div class="page-header">
  <h1>{{ 'customer.reset_password.title' | t }}</h1>
  <p>{{ 'customer.reset_password.subtext' | t: email: email }}.</p>
</div>

<div class="row">
  <div class="col-sm-6 col-md-4">

      {% form 'reset_customer_password' %}

        <div class="form-group">
          {{ form.errors | default_errors }}
        </div>

        <div class="form-group">
          <label for="ResetPassword" class="hidden-label sr-only">{{ 'customer.reset_password.password' | t }}</label>
          <input type="password" value="" name="customer[password]" id="ResetPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %} form-control" placeholder="{{ 'customer.reset_password.password' | t }}">
        </div>
        <div class="form-group">
          <label for="PasswordConfirmation" class="hidden-label sr-only">{{ 'customer.reset_password.password_confirm' | t }}</label>
          <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="input-full{% if form.errors contains 'password_confirmation' %} error{% endif %} form-control" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
        </div>

        <p>
          <input type="submit" class="btn btn-default" value="{{ 'customer.reset_password.submit' | t }}">
        </p>

      {% endform %}
  </div>
</div>
